<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GenButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GenTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="GenEditBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">start</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:inputType">textMultiLine|textCapSentences</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="GenEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">#AAAAAA</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:inputType">textCapSentences</item>
    </style>

</resources>
