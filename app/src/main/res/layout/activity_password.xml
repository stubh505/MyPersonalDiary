<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    android:background="@color/background"
    tools:context="com.androvista.kaustubh.mypersonaldiary.PasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="@style/GenTextView"
            android:text="@string/enter_password" />

        <EditText
            android:id="@+id/f_password"
            style="@style/GenEditText"
            android:layout_marginBottom="24dp"
            android:hint="@string/enter_password"
            android:inputType="textPassword" />

        <TextView
            style="@style/GenTextView"
            android:text="@string/cnf_password" />

        <EditText
            android:id="@+id/cnf_f_password"
            style="@style/GenEditText"
            android:layout_marginBottom="24dp"
            android:hint="@string/cnf_password"
            android:inputType="textPassword" />

        <TextView
            style="@style/GenTextView"
            android:text="@string/sec_ques" />

        <EditText
            android:id="@+id/sec_question"
            style="@style/GenEditText"
            android:layout_marginBottom="24dp"
            android:hint="@string/sec_ques"
            android:inputType="textCapSentences" />

        <TextView
            style="@style/GenTextView"
            android:text="@string/sec_ans" />

        <EditText
            android:id="@+id/sec_answer"
            style="@style/GenEditText"
            android:layout_marginBottom="24dp"
            android:hint="@string/sec_ans"
            android:inputType="textCapSentences" />

        <Button
            style="@style/GenButton"
            android:onClick="submit"
            android:text="@string/submit" />

    </LinearLayout>

</ScrollView>