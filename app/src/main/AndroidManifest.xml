<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.androvista.kaustubh.mypersonaldiary"
    android:installLocation="internalOnly">

    <application
        android:allowBackup="true"
        android:icon="@drawable/my_diary"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoadActivity" />
        <activity
            android:name=".PasswordActivity"
            android:label="@string/reg_pass"
            android:noHistory="true"/>
        <activity
            android:name=".ForgotPasswordActivity"
            android:label="@string/forgot_password"
            android:noHistory="true"/>
        <activity android:name=".HomeActivity"
            android:label="@string/app_name"/>
        <activity android:name=".AddNewActivity"
            android:label="@string/add_new"
            android:noHistory="true"/>
        <activity android:name=".ViewEntryActivity" />
        <activity android:name=".EditActivity"
            android:label="@string/edit"
            android:noHistory="true"/>
    </application>

</manifest>